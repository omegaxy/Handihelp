<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/item_response_imagev"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_marginRight="5dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="89dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_response_firsname_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/item_response_surname_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="19dp" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/item_response_accept_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/type5"
            android:text="Accepter"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <Button
            android:id="@+id/item_response_refuse_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/type1"
            android:text="Refuser"
            android:textColor="@color/white"
            android:textSize="17dp" />


    </LinearLayout>


</LinearLayout>