<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:background="@color/back2"
    android:theme="@style/AppTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:gravity="center">

        <TextView
            android:id="@+id/df_display_message_textview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="name"
            android:textColor="@color/grey05"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


    <ListView
        android:id="@+id/lv_display_message"
        style="@style/AppTheme"
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/df_display_message_edittext_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:hint="Entrez votre message"
            android:textColor="@color/grey05"
            android:textColorHint="@color/grey05"/>

        <Button
            android:id="@+id/df_display_message_button_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:backgroundTint="@color/dd"
            android:text="Envoyer" />

    </LinearLayout>

</LinearLayout>