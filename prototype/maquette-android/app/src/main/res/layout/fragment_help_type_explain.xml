<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@color/backg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/whitedarker"
            android:text="Mobilité"
            android:background="@color/type1"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
            android:textColor="@color/whitedarker"
        android:text="Pour ceux qui ont besoin d’être accompagnés à leurs rendez-vous, qui ont des difficultés à marcher, monter des escaliers, prendre les transports en commun..."
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/whitedarker"
            android:text="Vision"
            android:background="@color/type2"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pour les aveugles ou les malvoyants"
            android:textColor="@color/whitedarker"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/whitedarker"
            android:text="Travaux Manuels"
            android:background="@color/type3"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pour faire des petites réparations, du bricolage, changer une ampoule, …"
            android:textColor="@color/whitedarker"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/whitedarker"
            android:text="Tâches ménagères"
            android:background="@color/type4"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pour ceux qui ont besoin d’aide pour le ménage, repassage, cuisine, descendre les poubelles ..."
            android:textColor="@color/whitedarker"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/whitedarker"
            android:text="Force physique"
            android:background="@color/type5"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/whitedarker"
            android:text="Pour ceux qui ont besoin d'aide pour porter leurs courses ou lors d’un déménagement..."
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/whitedarker"
            android:text="Tâches techniques"
            android:background="@color/type6"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/whitedarker"
            android:text="Pour remplir des procédures en ligne, envoyer des mails, installer une imprimante, utiliser un nouvel appareil, …"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/whitedarker"
            android:text="Communication"
            android:background="@color/type7"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/whitedarker"
            android:text="Pour les sourds / malentendants, les muets et les analphabètes"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/whitedarker"
            android:text="Démarches admnistratives"
            android:background="@color/type8"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/whitedarker"
            android:text="Pour ceux qui ont besoin d’aide pour remplir des documents, faire des photocopies, comprendre certains mots techniques …"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/whitedarker"
            android:text="Jardins"
            android:background="@color/type9"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/whitedarker"
            android:text="Tondre le gazon, aroser, planter, etc."
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/whitedarker"
            android:text="Social"
            android:background="@color/type10"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/whitedarker"
            android:text="Pour ceux qui ont simplement besoin de parler"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/whitedarker"
            android:text="Autres"
            android:background="@color/type11"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/whitedarker"
            android:text="Pour une aide qui ne correspond pas aux catégories d'aide précédentes"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>
</ScrollView>