<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/back1"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="50dp"
        android:gravity="center"
        android:textColor="@color/grey05">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Connexion"
            android:textColor="@color/grey05"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="@dimen/titleSizeXL"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/aa"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/top"
            android:ems="10"
            android:hint="Email"
            android:textSize="@dimen/textSizeXL"
            android:textColor="@color/grey05"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/grey05" />

        <EditText
            android:id="@+id/pass"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:backgroundTint="@color/top"
            android:textSize="@dimen/textSizeXL"
            android:textColor="@color/grey05"
            android:hint="Mot De Passe"
            android:textColorHint="@color/grey05"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/loginbutton"
            android:layout_marginTop="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Se connecter"
            android:backgroundTint="@color/dd"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="@dimen/textSizeXL" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/errortv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:layout_marginTop="30dp"
            android:text="Erreur, vÃ©rifier vos identifiants"
            android:textAlignment="center"
            android:textColor="@color/color1"
            android:textSize="@dimen/textSizeXL"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center_horizontal"
        app:srcCompat="@drawable/image_aide"
        android:layout_marginTop="71dp"
        android:layout_below="@+id/linL"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerHorizontal="false"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:layout_marginBottom="18dp"
        android:orientation="vertical">



        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:fontFamily="casual"
            android:textColor="@color/grey05"
            android:text="Pas encore inscrit?"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="@dimen/textSizeXL"
            android:textStyle="bold" />

        <Button
            android:id="@+id/goregister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="casual"
            android:text="inscription"
            android:backgroundTint="@color/oraaange"
            android:gravity="center"
            android:textSize="@dimen/textSizeXL" />
    </RelativeLayout>




</RelativeLayout>